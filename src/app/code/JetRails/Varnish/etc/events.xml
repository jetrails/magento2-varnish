<?xml version="1.0" ?>

<config
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="urn:magento:framework:Event/etc/events.xsd" >
	<event name="controller_action_predispatch" >
		<observer
			name="jetrails_varnish_excluder"
			instance="JetRails\Varnish\Observer\Excluder"
		/>
	</event>
	<event name="admin_system_config_changed_section_jetrails_varnish" >
		<observer
			name="jetrails_varnish_save_config"
			instance="JetRails\Varnish\Observer\Save\Config"
		/>
	</event>
	<event name="admin_system_config_changed_section_system" >
		<observer
			name="jetrails_varnish_save_config"
			instance="JetRails\Varnish\Observer\Save\Cache"
		/>
	</event>
	<event name="catalog_product_save_before" >
		<observer
			name="jetrails_varnish_autopurge_product_save"
			instance="JetRails\Varnish\Observer\AutoPurge\Product"
		/>
	</event>
	<event name="catalog_product_delete_before" >
		<observer
			name="jetrails_varnish_autopurge_product_delete"
			instance="JetRails\Varnish\Observer\AutoPurge\Product"
		/>
	</event>
	<event name="cms_page_prepare_save" >
		<observer
			name="jetrails_varnish_autopurge_page_save"
			instance="JetRails\Varnish\Observer\AutoPurge\Page"
		/>
	</event>
	<event name="catalog_category_save_before" >
		<observer
			name="jetrails_varnish_autopurge_category_save"
			instance="JetRails\Varnish\Observer\AutoPurge\Category"
		/>
	</event>
	<event name="catalog_category_delete_before" >
		<observer
			name="jetrails_varnish_autopurge_category_delete"
			instance="JetRails\Varnish\Observer\AutoPurge\Category"
		/>
	</event>
</config>
